{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/ts/types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/ts/types/*"],
      "~/*": ["./src/*"],
      "Actions/*": ["./src/ts/actions/*"],
      "Containers/*": ["./src/ts/containers/*"],
      "Reducers/*": ["./src/ts/reducers/*"],
      "Components/*": ["./src/ts/components/*"],
      "Utils/*": ["./src/ts/utils/*"],
      "Tests/*": ["./src/ts/tests/*"],
      "Styles/*":["./src/static/css/*"],
      "Icons/*": ["./src/static/icons/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ]
}
