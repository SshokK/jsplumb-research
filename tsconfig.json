{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/types/*"],
      "~/*": ["./src/*"],
      "Actions/*": ["./src/actions/*"],
      "Containers/*": ["./src/containers/*"],
      "Reducers/*": ["./src/reducers/*"],
      "Components/*": ["./src/components/*"],
      "Utils/*": ["./src/utils/*"],
      "Tests/*": ["./src/tests/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
